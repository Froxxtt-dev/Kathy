<body>
    <div class="container">
        <h1>Happy Birthday, Catherine!</h1>
        <h2>A Special Day for a Special Person!</h2>
        <p id="message">Click below to reveal your birthday wish!</p>
        <button onclick="generateWish()">Reveal Your Wish!</button>
    </div>

    <script>
        // Generate confetti
        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.className = 'confetti';
            confetti.style.left = Math.random() * 100 + 'vw';
            confetti.style.background = `hsl(${Math.random() * 360}, 100%, 50%)`;
            confetti.style.animationDuration = (Math.random() * 3 + 2) + 's';
            document.body.appendChild(confetti);
            
            setTimeout(() => {
                confetti.remove();
            }, 5000);
        }

        // Generate balloon
        function createBalloon() {
            const balloon = document.createElement('div');
            balloon.className = 'balloon';
            balloon.style.left = Math.random() * 100 + 'vw';
            balloon.style.width = `${Math.random() * 20 + 40}px`;
            balloon.style.height = `${parseFloat(balloon.style.width) * 1.4}px`;
            balloon.style.background = `hsl(${Math.random() * 60 + 300}, 80%, 60%)`; /* Pink and lavender hues */
            balloon.style.animationDuration = `${Math.random() * 4 + 6}s`;
            document.body.appendChild(balloon);
            
            setTimeout(() => {
                balloon.remove();
            }, 10000);
        }

        // Generate birthday wish for Catherine
        function generateWish() {
            const message = document.getElementById('message');
            const subtitle = document.querySelector('h2');
            const wishes = [
                `Catherine, youâ€™re an absolute star! Wishing you a day filled with laughter, love, and all your favorite things! ðŸŒŸ`,
                `To my dearest Catherine, may your 22nd birthday be as beautiful and kind as your heart! Love you tons! ðŸ’–`,
                `Happy 22nd Birthday, Catherine! Letâ€™s celebrate the amazing person you are with joy and sweetness! ðŸŽ‚`,
                `Catherine, you make the world brighter! Hereâ€™s to a magical birthday full of dreams coming true! ðŸ¥³âœ¨`
            ];
            
            message.textContent = wishes[Math.floor(Math.random() * wishes.length)];
            message.style.opacity = '1';
            subtitle.style.opacity = '1';
        }

        // Create confetti every 100ms
        setInterval(createConfetti, 100);

        // Create balloons every 500ms
        setInterval(createBalloon, 500);

        // Show the subtitle on page load
        window.onload = function() {
            document.querySelector('h2').style.opacity = '1';
            document.getElementById('message').style.opacity = '1';
        };
    </script>
